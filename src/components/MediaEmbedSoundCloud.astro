---
const { url, title = 'SoundCloud track' } = Astro.props;
const embed = `https://w.soundcloud.com/player/?url=${encodeURIComponent(url)}&color=%23f6c85f&auto_play=false&hide_related=false&show_comments=false&show_user=true&show_reposts=false&show_teaser=true`;
---

<div class="soundcloud-wrap">
  <iframe
    title={title}
    src={embed}
    loading="lazy"
    allow="autoplay"
  />
</div>

