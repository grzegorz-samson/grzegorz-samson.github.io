---
import { getLangFromPath, swapLangInPath } from '../lib/i18n';

const currentPath = Astro.url.pathname;
const currentLang = getLangFromPath(currentPath);
---

<div class="lang-switch">
  <a class={currentLang === 'pl' ? 'active' : ''} href={swapLangInPath(currentPath, 'pl')}>PL</a>
  <a class={currentLang === 'en' ? 'active' : ''} href={swapLangInPath(currentPath, 'en')}>EN</a>
</div>

