---
import LanguageSwitch from '../components/LanguageSwitch.astro';
import FundingFooter from '../components/FundingFooter.astro';
import { withBase } from '../lib/paths';
import '../styles/global.css';

const { title, description = '', lang = 'pl' } = Astro.props;

const labels =
  lang === 'pl'
    ? {
        project: 'Projekt',
        plugin: 'Wtyczka VST',
        science: 'Nauka',
        workshops: 'Warsztaty',
        scholarship: 'Stypendium',
        bio: 'Bio'
      }
    : {
        project: 'Project',
        downloads: 'Downloads',
        updates: 'Updates',
        bio: 'Bio'
      };

const navItems =
  lang === 'pl'
    ? [
        { href: withBase('/pl/project/'), label: labels.project },
        { href: withBase('/pl/downloads/'), label: labels.plugin },
        { href: withBase('/pl/science/'), label: labels.science },
        { href: withBase('/pl/workshops/'), label: labels.workshops },
        { href: withBase('/pl/scholarship/'), label: labels.scholarship },
        { href: withBase('/pl/bio/'), label: labels.bio }
      ]
    : [
        { href: withBase('/en/project/'), label: labels.project },
        { href: withBase('/en/downloads/'), label: labels.downloads },
        { href: withBase('/en/updates/'), label: labels.updates },
        { href: withBase('/en/bio/'), label: labels.bio }
      ];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={withBase('/favicon.svg')} />
    <link rel="icon" href={withBase('/favicon.ico')} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <div class="site-bg"></div>
    <header class="main-header">
      <a class="brand" href={withBase(`/${lang}/`)}>GS</a>
      <nav>
        {navItems.map((item) => (
          <a href={item.href}>{item.label}</a>
        ))}
      </nav>
      <LanguageSwitch />
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="main-footer">
      <p>Nowe technologie w rozwoju narzędzi i kompetencji technologicznych dla współczesnej muzyki</p>
      <p>09.2025 - 02.2026</p>
    </footer>
    {lang === 'pl' && <FundingFooter lang={lang} />}
  </body>
</html>
