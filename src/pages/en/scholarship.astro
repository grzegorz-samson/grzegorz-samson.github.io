---
import PageLayout from '../../layouts/PageLayout.astro';
import Timeline from '../../components/Timeline.astro';
import { withBase } from '../../lib/paths';
---

<PageLayout
  lang="en"
  title="Scholarship | Scholarship project"
  description="Milestones and completed training courses within the scholarship project."
>
  <section class="content-stack">
    <p class="section-kicker">Scholarship</p>
    <h2>Project milestones</h2>
    <Timeline
      items={[
        { label: 'Courses and training (task 1)', date: '09.2025 - 10.2025', status: 'done', statusLabel: 'completed' },
        { label: 'International conference activity (task 2)', date: '10.2025 - 11.2025', status: 'done', statusLabel: 'completed' },
        { label: 'VST plugin implementation (task 3)', date: '10.2025 - 12.2025', status: 'done', statusLabel: 'completed' },
        { label: 'Composition with the plugin (task 4)', date: '12.2025 - 01.2026', status: 'done', statusLabel: 'completed' },
        { label: 'Workshops and public lectures (task 5)', date: '12.2025 - 02.2026', status: 'done', statusLabel: 'completed' },
        { label: 'Documentation and distribution (task 6)', date: '01.2026 - 02.2026', status: 'done', statusLabel: 'completed' }
      ]}
    />
  </section>

  <section class="content-stack">
    <p class="section-kicker">Training</p>
    <h2>Certificates</h2>
    <div class="publication-list">
      <article class="publication-card">
        <h3>Signal Processing Onramp (MATLAB)</h3>
        <p class="publication-meta">Completed: 2025-10-31</p>
        <div class="publication-links">
          <a class="button button-primary" href={withBase('/assets/certificates/certyfikat-kurs-1-matlab.pdf')} target="_blank" rel="noreferrer">
            Open certificate
          </a>
        </div>
      </article>

      <article class="publication-card">
        <h3>Core Designer Certificate (Dataiku)</h3>
        <p class="publication-meta">Completed: 2025-10-31 | Certificate no: cuocwr5rxq98</p>
        <div class="publication-links">
          <a class="button button-primary" href={withBase('/assets/certificates/certyfikat-kurs-2-dataiku.pdf')} target="_blank" rel="noreferrer">
            Open certificate
          </a>
          <a class="button button-ghost" href="https://verify.skilljar.com/c/cuocwr5rxq98" target="_blank" rel="noreferrer">
            Verification
          </a>
        </div>
      </article>

      <article class="publication-card">
        <h3>Introduction to Generative AI - Art of the Possible (AWS)</h3>
        <p class="publication-meta">Completed: 2025-10-31</p>
        <div class="publication-links">
          <a class="button button-primary" href={withBase('/assets/certificates/certyfikat-kurs-3-aws.pdf')} target="_blank" rel="noreferrer">
            Open certificate
          </a>
        </div>
      </article>
    </div>
  </section>
</PageLayout>
