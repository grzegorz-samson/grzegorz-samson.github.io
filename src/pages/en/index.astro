---
import PageLayout from '../../layouts/PageLayout.astro';
import HeroCta from '../../components/HeroCta.astro';
import FeatureGrid from '../../components/FeatureGrid.astro';
import { withBase } from '../../lib/paths';

const pluginPanelsHref = `${withBase('/en/plugin/')}#panels`;
---

<PageLayout
  lang="en"
  title="Scholarship project portfolio"
  description="Project website: VST tool, research, and conference materials."
>
  <HeroCta
    kicker="Scholarship project"
    title="Generative granular synthesizer VST"
    subtitle="Scholarship project website: New technologies in developing tools and technological competences for contemporary music."
    imageSrc={withBase('/assets/plugin/controls-panel.png')}
    imageAlt="VST plugin visualization"
    imageHref={pluginPanelsHref}
    badges={['Open source', 'VST3', 'AI-assisted', '09.2025 - 02.2026']}
    primaryCta={{ label: 'VST Plugin', href: withBase('/en/plugin/') }}
    secondaryCtas={[
      { label: 'View project', href: withBase('/en/project/') },
      { label: 'Research (ADC 2025)', href: withBase('/en/research/') }
    ]}
  />

  <section>
    <p class="section-kicker">Site scope</p>
    <FeatureGrid
      items={[
        {
          title: 'VST + documentation',
          text: 'Public plugin, technical documentation, and usage guide.',
          href: withBase('/en/plugin/')
        },
        {
          title: 'Workshops and implementations',
          text: 'Educational activities, open sessions, and dissemination of project outcomes.',
          href: withBase('/en/workshops/')
        },
        {
          title: 'Research and conferences',
          text: 'ADC 2025 materials: poster, method overview, and project research context.',
          href: withBase('/en/research/')
        }
      ]}
    />
  </section>
</PageLayout>
