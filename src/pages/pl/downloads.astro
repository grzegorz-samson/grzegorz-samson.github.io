    <p class="section-kicker">Pobieranie</p>
    <h2>Najnowsze wydanie</h2>
    <ReleaseCard
      name="Generatywny syntezator granularny VST"
      version="v0.1.0-alpha"
      date="2026-02-21"
      downloadUrl="https://example.com"
      notes={['Link placeholder - podmien na Twoj hosting binarek.', 'Wersja testowa do dokumentacji i prezentacji.']}
      checksum={{ algo: 'SHA256', value: 'TO_BE_ADDED' }}
    />
  </section>

  <section id="docs" class="content-stack">
    <p class="section-kicker">Dokumentacja</p>
    <h2>Materialy uzytkowe</h2>
