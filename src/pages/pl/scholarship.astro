---
import PageLayout from '../../layouts/PageLayout.astro';
import Timeline from '../../components/Timeline.astro';
import { withBase } from '../../lib/paths';
---

<PageLayout
  lang="pl"
  title="Stypendium | Projekt stypendialny"
  description="Kamienie milowe i szkolenia zrealizowane w ramach projektu stypendialnego."
>
  <section class="content-stack">
    <p class="section-kicker">Stypendium</p>
    <h2>Kamienie milowe projektu</h2>
    <Timeline
      items={[
        { label: 'Kursy i szkolenia (zadanie 1)', date: '09.2025 - 10.2025', status: 'done', statusLabel: 'zrealizowane' },
        { label: 'Konferencja międzynarodowa (zadanie 2)', date: '10.2025 - 11.2025', status: 'done', statusLabel: 'zrealizowane' },
        { label: 'Opracowanie koncepcji i realizacja wtyczki VST (zadanie 3)', date: '10.2025 - 12.2025', status: 'done', statusLabel: 'zrealizowane' },
        { label: 'Kompozycja z wykorzystaniem narzędzia (zadanie 4)', date: '12.2025 - 01.2026', status: 'done', statusLabel: 'zrealizowane' },
        { label: 'Warsztaty i wykłady otwarte (zadanie 5)', date: '12.2025 - 02.2026', status: 'done', statusLabel: 'zrealizowane' },
        { label: 'Dokumentacja i dystrybucja rezultatów (zadanie 6)', date: '01.2026 - 02.2026', status: 'done', statusLabel: 'zrealizowane' }
      ]}
    />
  </section>

  <section class="content-stack">
    <p class="section-kicker">Szkolenia</p>
    <h2>Certificates</h2>
    <div class="publication-list">
      <article class="publication-card">
        <h3>Signal Processing Onramp (MATLAB)</h3>
        <p class="publication-meta">Data ukończenia: 31.10.2025</p>
        <div class="publication-links">
          <a class="button button-primary" href={withBase('/assets/certificates/certyfikat-kurs-1-matlab.pdf')} target="_blank" rel="noreferrer">
            Otwórz certyfikat
          </a>
        </div>
      </article>

      <article class="publication-card">
        <h3>Core Designer Certificate (Dataiku)</h3>
        <p class="publication-meta">Data ukończenia: 31.10.2025 | Certyfikat nr: cuocwr5rxq98</p>
        <div class="publication-links">
          <a class="button button-primary" href={withBase('/assets/certificates/certyfikat-kurs-2-dataiku.pdf')} target="_blank" rel="noreferrer">
            Otwórz certyfikat
          </a>
          <a class="button button-ghost" href="https://verify.skilljar.com/c/cuocwr5rxq98" target="_blank" rel="noreferrer">
            Weryfikacja
          </a>
        </div>
      </article>

      <article class="publication-card">
        <h3>Introduction to Generative AI - Art of the Possible (AWS)</h3>
        <p class="publication-meta">Data ukończenia: 31.10.2025</p>
        <div class="publication-links">
          <a class="button button-primary" href={withBase('/assets/certificates/certyfikat-kurs-3-aws.pdf')} target="_blank" rel="noreferrer">
            Otwórz certyfikat
          </a>
        </div>
      </article>
    </div>
  </section>
</PageLayout>
