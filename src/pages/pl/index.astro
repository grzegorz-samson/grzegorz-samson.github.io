---
import PageLayout from '../../layouts/PageLayout.astro';
import HeroCta from '../../components/HeroCta.astro';
import FeatureGrid from '../../components/FeatureGrid.astro';
import { withBase } from '../../lib/paths';

const pluginPanelsHref = `${withBase('/pl/plugin/')}#panels`;
---

<PageLayout
  lang="pl"
  title="Portfolio projektu stypendialnego"
  description="Strona projektu: narzędzie VST, kompozycja i materiały konferencyjne."
>
  <HeroCta
    kicker="Projekt stypendialny"
    title="Generatywny syntezator granularny VST"
    subtitle="Strona projektu stypendialnego: „Nowe technologie w rozwoju narzędzi i kompetencji technologicznych dla współczesnej muzyki”."
    imageSrc={withBase('/assets/plugin/controls-panel.png')}
    imageAlt="Wizualizacja pluginu VST"
    imageHref={pluginPanelsHref}
    badges={['Open source', 'VST3', 'AI-assisted', '09.2025 - 02.2026']}
    primaryCta={{ label: 'Wtyczka VST', href: withBase('/pl/plugin/') }}
    secondaryCtas={[
      { label: 'Zobacz projekt', href: withBase('/pl/project/') },
      { label: 'Badania (ADC 2025)', href: withBase('/pl/research/') }
    ]}
  />

  <section>
    <p class="section-kicker">Zakres strony</p>
    <FeatureGrid
      items={[
        {
          title: 'VST + dokumentacja',
          text: 'Publiczna wtyczka, dokumentacja techniczna i instrukcja użycia.',
          href: withBase('/pl/plugin/')
        },
        {
          title: 'Kompozycja audio',
          text: 'Utwór stworzony narzędziem VST wraz z notatką procesu.',
          href: withBase('/pl/project/#composition')
        },
        {
          title: 'Badania i konferencje',
          text: 'Materiały ADC 2025: poster, opis metod i kontekst badawczy projektu.',
          href: withBase('/pl/research/')
        }
      ]}
    />
  </section>
</PageLayout>
