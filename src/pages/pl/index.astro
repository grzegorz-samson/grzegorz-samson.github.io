---
import PageLayout from '../../layouts/PageLayout.astro';
import HeroCta from '../../components/HeroCta.astro';
import FeatureGrid from '../../components/FeatureGrid.astro';
import { withBase } from '../../lib/paths';
---

<PageLayout
  lang="pl"
  title="Portfolio projektu stypendialnego"
  description="Strona projektu: narzedzie VST, kompozycja i materialy konferencyjne."
>
  <HeroCta
    title="Generatywny syntezator granularny VST"
    subtitle="Strona projektu stypendialnego: Nowe technologie w rozwoju narzedzi i kompetencji technologicznych dla wspolczesnej muzyki."
    imageSrc={withBase('/images/plugin-hero.svg')}
    imageAlt="Wizualizacja pluginu VST"
    badges={['Open source', 'VST3', 'AI-assisted', '09.2025 - 02.2026']}
    primaryCta={{ label: 'Pobierz plugin', href: withBase('/pl/downloads/') }}
    secondaryCtas={[
      { label: 'Zobacz projekt', href: withBase('/pl/project/') },
      { label: 'Aktualnosci', href: withBase('/pl/updates/') }
    ]}
  />

  <section>
    <p class="section-kicker">Zakres strony</p>
    <FeatureGrid
      items={[
        {
          title: 'VST + dokumentacja',
          text: 'Publiczny plugin, dokumentacja techniczna i instrukcja uzycia.',
          href: withBase('/pl/project/#vst')
        },
        {
          title: 'Kompozycja audio',
          text: 'Utwor stworzony narzedziem VST wraz z notatka procesu.',
          href: withBase('/pl/project/#composition')
        },
        {
          title: 'Research / konferencja',
          text: 'Materialy wystapienia: abstrakt, slajdy, nagranie i notatki.',
          href: withBase('/pl/project/#research')
        }
      ]}
    />
  </section>
</PageLayout>

